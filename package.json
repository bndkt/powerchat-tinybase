{
  "name": "powerchat",
  "version": "1.0.0",
  "main": "expo-router/entry",
  "scripts": {
    "clear": "rm -f bun.lockb && find ./ -type d -and \\( -name node_modules -or -name build -or -name dist \\) -exec rm -rf '{}' +",
    "ncu": "npx npm-check-updates -p bun -ui",
    "dev": "expo start",
    "android": "expo run:android",
    "ios": "expo run:ios",
    "web": "expo start --web --clear",
    "doc": "npx expo-doctor@latest",
    "prebuild": "expo prebuild --platform ios --clean --no-install",
    "build:simulator": "bun x eas-cli@latest build --profile simulator --platform ios --local",
    "build:development": "bun x eas-cli@latest build --profile development --platform ios --local",
    "build:production": "bun x eas-cli@latest build --profile production --platform ios --local",
    "update:production": "bun x eas-cli@latest update --non-interactive -p ios --branch=production --auto",
    "types": "supabase gen types typescript --local > src/lib/database.types.ts",
    "lint": "eslint src"
  },
  "dependencies": {
    "@azure/core-asynciterator-polyfill": "^1.0.2",
    "@faker-js/faker": "8.4.1",
    "@journeyapps/powersync-sdk-react-native": "1.2.1",
    "@journeyapps/react-native-quick-sqlite": "1.1.1",
    "@shopify/flash-list": "1.6.3",
    "@supabase/supabase-js": "2.39.6",
    "@tamagui/animations-react-native": "1.90.1",
    "@tamagui/babel-plugin": "1.90.1",
    "@tamagui/config": "1.90.1",
    "@tamagui/font-inter": "1.90.1",
    "@tamagui/lucide-icons": "1.90.1",
    "@tamagui/theme-base": "1.90.1",
    "base-64": "^1.0.0",
    "date-fns": "^2.30.0",
    "expo": "~50.0.7",
    "expo-crypto": "~12.8.1",
    "expo-dev-client": "~3.3.8",
    "expo-linking": "~6.2.2",
    "expo-router": "~3.4.7",
    "expo-splash-screen": "~0.26.4",
    "expo-status-bar": "~1.11.1",
    "react": "18.2.0",
    "react-dom": "18.2.0",
    "react-native": "0.73.4",
    "react-native-fetch-api": "^3.0.0",
    "react-native-gesture-handler": "~2.14.0",
    "react-native-get-random-values": "~1.8.0",
    "react-native-mmkv": "^2.12.1",
    "react-native-pager-view": "6.2.3",
    "react-native-polyfill-globals": "^3.1.0",
    "react-native-reanimated": "~3.6.2",
    "react-native-safe-area-context": "4.8.2",
    "react-native-screens": "~3.29.0",
    "react-native-svg": "14.1.0",
    "react-native-url-polyfill": "^2.0.0",
    "react-native-web": "0.19.10",
    "tamagui": "1.90.1",
    "text-encoding": "^0.7.0",
    "tinybase": "link:tinybase",
    "web-streams-polyfill": "^3.2.1"
  },
  "devDependencies": {
    "@babel/core": "7.23.9",
    "@babel/plugin-transform-async-generator-functions": "^7.23.9",
    "@biomejs/biome": "^1.5.3",
    "@tamagui/metro-plugin": "^1.90.1",
    "@types/react": "~18.2.56",
    "eslint": "8.56.0",
    "eslint-config-universe": "12.0.0",
    "typescript": "5.3.3"
  },
  "license": "UNLICENSED",
  "private": true
}
